<collapsible-dialog id="toolboxOffsets" title="Offsets" width="345" height="350">
	<vbox width="100%" height="100%">
		<grid columns="2">
			<label text="Instrumental Offset"/>
			<number-stepper	id="inputInstOffset" pos="0" step="0.5" tooltip="Instrumental Offset, relative to the note data."/>

			<label text="Player Vocals Offset"/>
			<number-stepper id="inputPlayerOffset" pos="0" step="0.5" tooltip="Player Vocals Offset, relative to the instrumental offset"/>

			<label text="Opponent Vocals Offset"/>
			<number-stepper id="inputOpponentOffset" pos="0" step="0.5" tooltip="Opponent Vocals Offset, relative to the instrumental offset"/>

		</grid>
	</vbox>

	
</collapsible-dialog>
