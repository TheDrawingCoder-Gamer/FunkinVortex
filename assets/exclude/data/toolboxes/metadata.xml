<collapsible-dialog id="toolboxMetadata" title="Song Metadata" width="345" height="512">
	<vbox width="100%" height="100%">
		<frame text="Metadata" width="100%" height="270" id="frameVariation">
			<grid columns="2" height="100%">
				<label text="Song Name:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputSongName" value="Bopeebo" tooltip="The readable name of the song."/>
				<label text="Song Artist:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputSongArtist" value="you're mom" tooltip="Composer of the song."/>
				<label text="Charter:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputSongCharter" value="my mom" tooltip="Charter of the song. Probably you!"/>
				<label text="Stage:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputStage" value="stage" tooltip="The stage the level takes place on."/>
				<label text="Note Style:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputNoteStyle" value="funkin" tooltip="The graphical style of notes."/>
				<label text="Player:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputPlayer" value="bf" tooltip="The player character."/>
				<label text="Opponent:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputOpponent" value="dad" tooltip="The opponent character."/>
				<label text="Girlfriend:" verticalAlign="center" horizontalAlign="right"/>
				<textfield id="inputGirlfriend" value="gf" tooltip="The girlfriend character."/>
			</grid>
		</frame>
		<frame text="No Chart loaded!" width="100%" height="170" id="frameDifficulty">
			<grid columns="2">
				<label id="labelScrollSpeed" text="Scroll Speed: 1.0x"/>
				<spacer />
				<slider id="inputScrollSpeed" pos="1.0" step="0.1" precision="1" min="0.5" max="5.0" tooltip="Adjust the speed at which notes move."/>
				<spacer/>
				<label id="labelStepmaniaRating" text="Difficulty Rank (Stepmania)" verticalAlign="center"/>
				<spacer/>
				<slider id="inputStepmaniaRating" pos="0" step="1" min="0" max="35" tooltip="The rating of this chart in the stepmania menu."/>
				<spacer/>
				<label id="labelDifficultyRating" text="Difficulty Rank (FNF)" verticalAlign="center"/>
				<number-stepper id="inputDifficultyRating" pos="0" step="1" min="0" max="15" tooltip="The rating of this song in the FNF freeplay menu."/>
			</grid>
		</frame>
	</vbox>
</collapsible-dialog>
